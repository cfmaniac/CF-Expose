<cfComponent	Hint	= ""	Output	= "no">	<cfFunction		name		= "init"		returnType	= "IsolatedEvaluate"		access		= "public"		output		= "no"		description	= ""		hint		= ""	>		<cfArgument name="evaluateString"	required="yes" type="string" hint="" />		<cfArgument name="variablesScope"	required="no" type="struct" default="#structNew()#" hint="" />		<cfArgument name="parentObject"		required="no" type="any" hint="" />		<cfScript>			structClear(variables);			structAppend(variables, arguments.variablesScope);			if(structKeyExists(arguments, "parentObject"))				arguments.evaluateString = "arguments.parentObject.#arguments.evaluateString#";			this.result = evaluate(arguments.evaluateString);			return this;		</cfScript>	</cfFunction></cfComponent>